<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFF4D0"
    android:orientation="vertical"

    tools:context=".officialfir">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Official F.I.R "
                android:textSize="30sp"
                android:textColor="#000000"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:textColor="#000000">

                </TextView>




                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="full_name"
                    android:id="@+id/Off_name"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    />






            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:textColor="#000000">

                </TextView>



                <TextView
                    android:id="@+id/Off_address"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_weight="1"
                    android:hint="address"
                    android:textSize="20sp"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:textColor="#000000">

                </TextView>



                <TextView
                    android:id="@+id/Off_city"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:hint="City"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PostCode"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:textColor="#000000">

                </TextView>


                <TextView
                    android:id="@+id/Off_postcode"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:hint="Postal Code"
                    android:textSize="20sp"
                    />


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subject"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:textColor="#000000">

                </TextView>



                <TextView
                    android:id="@+id/Off_subject"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:hint="Subject"
                    android:textSize="20sp"
                    />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complaint"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:textColor="#000000">

                </TextView>

                <TextView
                    android:id="@+id/Off_complaint"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:textAlignment="center"
                    android:hint=" Complaint"
                    android:textSize="20sp"
                    />



            </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="User Signature"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    tools:ignore="RtlCompat">

                </TextView>
                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:id="@+id/Off_signature"

                    >

                </ImageView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="S.H.O Signature"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    tools:ignore="RtlCompat">

                </TextView>
                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:id="@+id/fir_adminsignature"

                    >

                </ImageView>


            </LinearLayout>





            <Button
                android:id="@+id/adminhome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="Back To Home"
                android:background="@drawable/button"
                android:layout_marginTop="20dp"
                android:textColor="#FFFFFF"
                />








        </LinearLayout>
    </ScrollView>

</LinearLayout>